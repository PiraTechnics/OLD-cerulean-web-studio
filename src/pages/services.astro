---
import { getEntry } from "astro:content";
import Layout from "../layouts/Page.astro";

/* type Props = CollectionEntry<"pages">["data"];

const { intro, details, heroImage } = Astro.props; */
const servicePage = await getEntry("pages", "services");
---

<Layout>
	<article>
		<div class="hero-image">
			{
				servicePage.data.heroImage && (
					<img
						width={1020}
						height={510}
						src={servicePage.data.heroImage}
						alt=""
					/>
				)
			}
		</div>
		<div class="prose">
			<div class="title">
				<h2>{servicePage.data.intro}</h2>
				<hr />
			</div>
			<div class="prose">{servicePage.data.details}</div>
		</div>
	</article>
</Layout>

<style>
	main {
		width: calc(100% - 2em);
		max-width: 100%;
		margin: 0;
	}
	.hero-image {
		width: 100%;
	}
	.hero-image img {
		display: block;
		margin: 0 auto;
		border-radius: 12px;
		box-shadow: var(--box-shadow);
	}
	.prose {
		width: 720px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding: 1em;
	}
	.title {
		margin-bottom: 1em;
		padding: 1em 0;
		text-align: center;
		line-height: 1;
	}
	.title h1 {
		margin: 0 0 0.5em 0;
	}
</style>
