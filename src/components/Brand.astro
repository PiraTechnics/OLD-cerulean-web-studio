---
import { Image } from "astro:assets";
import Logo from "../assets/logo.png";
---

<div class="flex gap-2 items-center">
  <Image
    src={Logo}
    alt="Cerulean Web Studio Logo"
    class="lg:w-[75px] md:w-[60px] w-[65px]"
  />
  <div class="flex flex-col [&>*]:italic">
    <span class="md:text-2xl lg:text-4xl text-3xl font-bold text-primary"
      >Cerulean</span
    >
    <span class="md:text-xl lg:text-3xl text-2xl tracking-tight"
      >Web Studio</span
    >
  </div>
</div>
