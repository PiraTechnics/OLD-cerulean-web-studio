---
import { SITE_TITLE } from "../consts";
import { Image } from "astro:assets";
import Logo from "../assets/logo.png";
---

<div class="flex gap-4 items-end">
	<Image
		src={Logo}
		alt="Cerulean Web Studio Logo"
		class="w-[75px] sm:w-[50px]"
	/>
	<div class="flex flex-col max-w-20">
		<span class="text-4xl font-bold text-primary">Cerulean</span>
		<span class="text-3xl tracking-tight">Web Studio</span>
	</div>
</div>
